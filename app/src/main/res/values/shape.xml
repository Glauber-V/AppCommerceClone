<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Card-->
    <style name="AppCommerce.ShapeAppearance.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size_small</item>
    </style>

    <style name="AppCommerce.ShapeAppearance.CardView.RightRoundedCorners" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0%</item>
        <item name="cornerSizeTopRight">@dimen/corner_size_small</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">@dimen/corner_size_small</item>
    </style>

    <!--ShapeableImageView-->
    <style name="AppCommerce.ShapeAppearance.ImageView.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="AppCommerce.ShapeAppearance.ImageView.FullRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppCommerce.ShapeAppearance.ImageView.UpRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopLeft">@dimen/corner_size_small</item>
        <item name="cornerFamilyTopRight">@dimen/corner_size_small</item>
    </style>

    <!--Button-->
    <style name="AppCommerce.ShapeAppearance.Button.FullRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size_large</item>
    </style>

    <!--Material Alert Dialog-->
    <style name="AppCommerce.ShapeAppearance.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size_small</item>
    </style>

</resources>