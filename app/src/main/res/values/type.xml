<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCommerce.TextAppearance.Base" parent="">
        <item name="android:breakStrategy">high_quality</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:letterSpacing">0.0250</item>
        <item name="android:textColor">@color/black_900_080</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCommerce.TextAppearance.Headline" parent="AppCommerce.TextAppearance.Base">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppCommerce.TextAppearance.Subtitle" parent="AppCommerce.TextAppearance.Base">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppCommerce.TextAppearance.Body" parent="AppCommerce.TextAppearance.Base">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AppCommerce.TextAppearance.CardView.Center.Headline" parent="AppCommerce.TextAppearance.Base">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AppCommerce.TextAppearance.CardView.Center.Subtitle" parent="AppCommerce.TextAppearance.Base">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppCommerce.TextAppearance.CardView.LeftToRight.Headline" parent="AppCommerce.TextAppearance.Base">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">fill</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppCommerce.TextAppearance.CardView.LeftToRight.Subtitle" parent="AppCommerce.TextAppearance.Base">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">fill</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppCommerce.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppCommerce.TextAppearance.Chip" parent="AppCommerce.TextAppearance.Base">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">fill</item>
    </style>

</resources>