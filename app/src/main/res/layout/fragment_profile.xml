<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.example.appcommerceclone.data.user.model.User" />

        <variable
            name="isEditMode"
            type="Boolean" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/padding_large">

            <RelativeLayout
                android:id="@+id/profile_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/margin_size_large"
                    android:layout_marginTop="@dimen/margin_size_extra_large"
                    android:layout_marginEnd="@dimen/margin_size_large"
                    android:layout_marginBottom="@dimen/margin_size_large"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_user_24"
                    app:shapeAppearance="@style/AppCommerce.ShapeAppearance.ImageView.RoundedCorners"
                    app:strokeColor="@color/stroke_color_dark"
                    app:strokeWidth="@dimen/stroke_size_small" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/profile_update_profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/profile_image"
                    android:layout_alignEnd="@id/profile_image"
                    android:layout_marginTop="-20dp"
                    android:layout_marginEnd="-20dp"
                    android:backgroundTint="@color/primaryLightColor"
                    android:contentDescription="@string/content_desc_update_profile_pic_btn"
                    android:elevation="@dimen/elevation_small"
                    android:src="@drawable/ic_baseline_edit_24"
                    app:tint="@color/icon_color_white" />

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                app:expandedHintEnabled="false"
                app:hintTextAppearance="@style/AppCommerce.TextAppearance.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_relative_layout"
                app:startIconDrawable="@drawable/ic_baseline_email_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_email_text"
                    style="@style/AppCommerce.TextAppearance.Body"
                    userProfileChangeEditMode="@{isEditMode}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:text="@{user.email}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                app:expandedHintEnabled="false"
                app:hintTextAppearance="@style/AppCommerce.TextAppearance.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_email"
                app:startIconDrawable="@drawable/ic_baseline_user_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_username_text"
                    style="@style/AppCommerce.TextAppearance.Body"
                    userProfileChangeEditMode="@{isEditMode}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_username"
                    android:inputType="textPersonName"
                    android:text="@{user.username}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                android:layout_marginEnd="@dimen/margin_size_large"
                app:expandedHintEnabled="false"
                app:hintTextAppearance="@style/AppCommerce.TextAppearance.Body"
                app:layout_constraintEnd_toStartOf="@+id/profile_last_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_username">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_first_name_text"
                    style="@style/AppCommerce.TextAppearance.Body"
                    userProfileChangeEditMode="@{isEditMode}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_name_first_name"
                    android:inputType="textPersonName"
                    android:text="@{user.name.firstname}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                app:expandedHintEnabled="false"
                app:hintTextAppearance="@style/AppCommerce.TextAppearance.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/profile_first_name"
                app:layout_constraintTop_toBottomOf="@id/profile_username">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_last_name_text"
                    style="@style/AppCommerce.TextAppearance.Body"
                    userProfileChangeEditMode="@{isEditMode}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_name_last_name"
                    android:inputType="textPersonName"
                    android:text="@{user.name.lastname}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                app:endIconMode="password_toggle"
                app:expandedHintEnabled="false"
                app:hintTextAppearance="@style/AppCommerce.TextAppearance.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_first_name"
                app:startIconDrawable="@drawable/ic_baseline_lock_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_password_text"
                    style="@style/AppCommerce.TextAppearance.Body"
                    userProfileChangeEditMode="@{isEditMode}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:text="@{user.password}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                app:expandedHintEnabled="false"
                app:hintTextAppearance="@style/AppCommerce.TextAppearance.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_password"
                app:startIconDrawable="@drawable/ic_baseline_phone_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_phone_text"
                    style="@style/AppCommerce.TextAppearance.Body"
                    userProfileChangeEditMode="@{isEditMode}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_phone"
                    android:inputType="phone"
                    android:text="@{user.phone}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_zipcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                app:expandedHintEnabled="false"
                app:hintTextAppearance="@style/AppCommerce.TextAppearance.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_zipcode_text"
                    style="@style/AppCommerce.TextAppearance.Body"
                    userProfileChangeEditMode="@{isEditMode}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_address_zipcode"
                    android:inputType="number"
                    android:text="@{user.address.zipcode}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                app:expandedHintEnabled="false"
                app:hintTextAppearance="@style/AppCommerce.TextAppearance.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_zipcode"
                app:startIconDrawable="@drawable/ic_baseline_location_city_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_city_text"
                    style="@style/AppCommerce.TextAppearance.Body"
                    userProfileChangeEditMode="@{isEditMode}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_address_city"
                    android:inputType="text|textCapSentences"
                    android:text="@{user.address.city}" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/profile_linear_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                android:baselineAligned="false"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_city">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_street"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_size_large"
                    android:layout_weight="4"
                    app:expandedHintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_street_text"
                        style="@style/AppCommerce.TextAppearance.Body"
                        userProfileChangeEditMode="@{isEditMode}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_address_street"
                        android:inputType="text|textCapSentences"
                        android:text="@{user.address.street}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_house_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:expandedHintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_house_number_text"
                        style="@style/AppCommerce.TextAppearance.Body"
                        setHouseNumber="@{user.address.number}"
                        userProfileChangeEditMode="@{isEditMode}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_address_number"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_linear_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_large"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_linear_layout_1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profile_cancel_btn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_size_large"
                    android:layout_weight="2"
                    android:text="@string/profile_cancel_update_btn"
                    android:textAppearance="@style/AppCommerce.TextAppearance.Button"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profile_save_or_update_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/profile_start_update_btn"
                    android:textAppearance="@style/AppCommerce.TextAppearance.Button"
                    android:textColor="@color/white_100" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_logout_btn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_small"
                android:text="@string/profile_logout_btn"
                android:textAppearance="@style/AppCommerce.TextAppearance.Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_linear_layout_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>