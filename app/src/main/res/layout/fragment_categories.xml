<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_category_all"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        app:cardElevation="@dimen/small_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.AppCommerce.CardView.Right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:gravity="start|center_vertical"
            android:text="@string/category_all_products"
            android:textAppearance="@style/TextAppearance.AppCommerce.Headline.Large"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_category_electronics"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        app:cardElevation="@dimen/small_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_category_all"
        app:shapeAppearance="@style/ShapeAppearance.AppCommerce.CardView.Right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:gravity="start|center_vertical"
            android:text="@string/category_name_electronics"
            android:textAppearance="@style/TextAppearance.AppCommerce.Headline.Large"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_category_jewelery"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        app:cardElevation="@dimen/small_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_category_electronics"
        app:shapeAppearance="@style/ShapeAppearance.AppCommerce.CardView.Right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:gravity="start|center_vertical"
            android:text="@string/category_name_jewelery"
            android:textAppearance="@style/TextAppearance.AppCommerce.Headline.Large"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_category_mens_clothing"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        app:cardElevation="@dimen/small_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_category_jewelery"
        app:shapeAppearance="@style/ShapeAppearance.AppCommerce.CardView.Right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:gravity="start|center_vertical"
            android:text="@string/category_name_mens_clothing"
            android:textAppearance="@style/TextAppearance.AppCommerce.Headline.Large"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_category_womens_clothing"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        app:cardElevation="@dimen/small_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_category_mens_clothing"
        app:shapeAppearance="@style/ShapeAppearance.AppCommerce.CardView.Right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:gravity="start|center_vertical"
            android:text="@string/category_name_women_s_clothing"
            android:textAppearance="@style/TextAppearance.AppCommerce.Headline.Large"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
