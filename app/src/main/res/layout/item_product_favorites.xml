<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="product"
                type="com.example.appcommerceclone.model.product.Product"/>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_small"
            android:layout_marginEnd="@dimen/margin_size_extra_large"
            app:shapeAppearance="@style/AppCommerce.ShapeAppearance.CardView.RightRoundedCorners">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_size_medium">

            <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/product_favorite_image"
                    setProductImageFromUrl="@{product.imageUrl}"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/margin_size_medium"
                    android:layout_marginTop="@dimen/margin_size_medium"
                    android:layout_marginBottom="@dimen/margin_size_medium"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/AppCommerce.ShapeAppearance.ImageView.FullRounded"
                    tools:src="@drawable/banner_men_s_clothing"/>

            <TextView
                    android:id="@+id/product_favorite_name"
                    style="@style/AppCommerce.TextAppearance.CardView.LeftToRight.Headline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_medium"
                    android:layout_marginEnd="@dimen/margin_size_medium"
                    android:maxLines="2"
                    android:text="@{product.name}"
                    app:layout_constraintEnd_toStartOf="@id/product_favorite_remove_btn"
                    app:layout_constraintStart_toEndOf="@id/product_favorite_image"
                    app:layout_constraintTop_toTopOf="@+id/product_favorite_image"
                    tools:text="Product Name - Crafted with some premium material"/>

            <TextView
                    android:id="@+id/product_favorite_price"
                    style="@style/AppCommerce.TextAppearance.CardView.LeftToRight.Subtitle"
                    setProductPrice="@{product.price}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/product_favorite_name"
                    app:layout_constraintStart_toStartOf="@+id/product_favorite_name"
                    app:layout_constraintTop_toBottomOf="@+id/product_favorite_name"
                    tools:text="R$ 29,90"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/product_favorite_remove_btn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/content_desc_remove_from_favorites_btn"
                    android:src="@drawable/ic_baseline_favorite_24"
                    app:icon="@drawable/ic_baseline_favorite_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/product_favorite_image"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>